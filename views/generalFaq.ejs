<%- include("header.ejs") -%>
    <%- include("navigation.ejs") -%>

        <section class="coming">
            <div class="grid">
                <div class="left">
                    <hgroup>
                        <h1>General FAQ</h1>
                        <p>Here are more general questions and answers. If your question is not answered here, feel free
                            to contact the organisers directly.</p>
                    </hgroup>
                </div>

                <div class="right">
                    <div class="accordion">

                        <% generalFaqs.forEach((item, index)=> { %>
                            <div class="faq-item">
                                <h3>
                                    <button type="button" class="accordion-header <%= index === 0 ? 'active' : '' %>"
                                        id="faq-btn-<%= item.id %>"
                                        aria-expanded="<%= index === 0 ? 'true' : 'false' %>"
                                        aria-controls="faq-content-<%= item.id %>">
                                        <%= item.question %>
                                    </button>
                                </h3>

                                <div id="faq-content-<%= item.id %>"
                                    class="accordion-content <%= index === 0 ? 'active' : '' %>" role="region"
                                    aria-labelledby="faq-btn-<%= item.id %>">
                                    <p><%- item.answer %></p>
                                </div>
                            </div>
                            <% }); %>

                    </div>
                </div>
            </div>
        </section>

        <%- include("footer.ejs") -%>